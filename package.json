{
  "name": "jamespamplin.com",
  "author": {
    "name": "James Pamplin",
    "email": "james@jamespamplin.com",
    "url": "https://jamespamplin.com"
  },
  "homepage": "https://jamespamplin.com",
  "version": "3.0.0",
  "private": true,
  "scripts": {
    "build": "NODE_ENV=production ts-node src/build.tsx",
    "prebuild": "npm run lint",
    "dev": "live-server dist",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,md}'",
    "lint": "tslint --project . --fix",
    "prelint": "npm run format",
    "now-build": "npm run build",
    "start": "concurrently npm:dev npm:watch",
    "watch": "nodemon -e ts,tsx,md -w src -x 'npm run build'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "aphrodite": "^2.4.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-markdown": "^4.2.2"
  },
  "devDependencies": {
    "@types/node": "^12.12.14",
    "@types/react": "^16.9.15",
    "@types/react-dom": "^16.9.4",
    "concurrently": "^5.0.0",
    "husky": "^3.1.0",
    "live-server": "^1.2.1",
    "nodemon": "^2.0.1",
    "prettier": "^1.19.1",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.7.3"
  }
}
