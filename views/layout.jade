- var pageTitle = title || meta && meta.name
- var schema = meta && meta['@type'] || 'http://schema.org/WebPage'

doctype html
html
  head
    title #{pageTitle} - JamesPamplin.com
    block head
      meta(charset="UTF-8")
      meta(name="viewport", content="width=device-width, initial-scale=1")
      link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/font-awesome/3.2.0/css/font-awesome.min.css')
      style
        include:node-sass includes/styles/main.scss


  body(itemtype=schema, itemscope)
    .body
      header
        a.title(href="/", title="JamesPamplin.com")
            span.first-name James
            span.last-name Pamplin

        h1(itemprop="name")
          .page-title
            = pageTitle

      block content

    include includes/_footer

    include ga.jade
