title = title || meta && meta.name
schema = meta && meta['@type'] || 'http://schema.org/WebPage'

!!!
html
	head
		title #{title} - JamesPamplin.com
		block head
			meta(charset="UTF-8")
			meta(name="viewport", content="width=device-width, initial-scale=1")
			link(rel='stylesheet', href='/styles/style.css')
			link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/font-awesome/3.2.0/css/font-awesome.min.css')

	body(itemtype=schema, itemscope)
		.body
			header
				h1(itemprop="name")
					a.title(href="/", title="JamesPamplin.com")
						span.first-name James
						span.last-name Pamplin

			article.content
				block content

		include ga.jade
